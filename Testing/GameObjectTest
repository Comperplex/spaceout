import unittest
import os, sys

currDir = os.path.dirname(os.path.realpath(__file__))
rootDir = os.path.abspath(os.path.join(currDir, '..'))
gameDir = rootDir + "\\Game"
sys.path.append(gameDir)

from GameObject import Drone, Worker

class GameObjectTest(unittest.TestCase):

	def testDrone(self):
		drone = Drone(loc=[0,0], player='sammy')
		self.assertEqual(drone.objectType, 'drone')

	def testWorker(self):
		worker = Worker(loc=[0,0], player='owen')
		self.assertEqual(worker.objectType, 'worker')

if __name__ == '__main__':
	unittest.main()
